{
  "name": "git-needs-pull",
  "version": "2.0.0",
  "description": "Check synchronously if a git repository needs to pull",
  "main": "./dest/index.js",
  "types": "./dest/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint index.ts __tests__/**/*.ts",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build": "rimraf dest && tsc && babel dest -d dest",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "is",
    "git",
    "repository",
    "repo",
    "is-git",
    "needs",
    "pull"
  ],
  "author": "Jan Peer St√∂cklmair",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JPeer264/node-git-needs-pull/issues"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "homepage": "https://github.com/JPeer264/node-git-needs-pull#readme",
  "dependencies": {
    "current-git-branch": "^1.0.0",
    "execa": "^4.0.3",
    "git-commit-count": "^1.1.2",
    "is-absolute": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@types/fs-extra": "^9.0.1",
    "@types/is-absolute": "^1.0.0",
    "@types/jest": "^26.0.4",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "rimraf": "^3.0.2",
    "temp-dir": "^2.0.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6",
    "uuid": "^8.3.0"
  }
}
